#!/bin/bash
# Pre-push hook to run checks before pushing to remote

set -e

echo "ğŸ” Running pre-push checks..."

# Colors for output
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
NC='\033[0m' # No Color

# Check if we're in the right directory
if [ ! -f "package.json" ]; then
    echo -e "${RED}âŒ Must be run from repository root${NC}"
    exit 1
fi

# Run linting
echo -e "\n${YELLOW}ğŸ“ Running linter...${NC}"
if bun run lint; then
    echo -e "${GREEN}âœ… Linting passed${NC}"
else
    echo -e "${RED}âŒ Linting failed${NC}"
    exit 1
fi

# Run type checking
echo -e "\n${YELLOW}ğŸ” Running type check...${NC}"
if bun run typecheck; then
    echo -e "${GREEN}âœ… Type checking passed${NC}"
else
    echo -e "${RED}âŒ Type checking failed${NC}"
    exit 1
fi

# Run unit tests
echo -e "\n${YELLOW}ğŸ§ª Running unit tests...${NC}"
if bun run test; then
    echo -e "${GREEN}âœ… Unit tests passed${NC}"
else
    echo -e "${RED}âŒ Unit tests failed${NC}"
    exit 1
fi

# Optional: Run E2E tests (can be slow, uncomment if needed)
# echo -e "\n${YELLOW}ğŸ­ Running E2E tests...${NC}"
# if bun run test:e2e; then
#     echo -e "${GREEN}âœ… E2E tests passed${NC}"
# else
#     echo -e "${RED}âŒ E2E tests failed${NC}"
#     exit 1
# fi

# Check for secrets
echo -e "\n${YELLOW}ğŸ”’ Checking for secrets...${NC}"
if git diff --cached --name-only | xargs grep -l -E '(password|secret|key|token|api_key).*=.*[A-Za-z0-9]{20,}' 2>/dev/null; then
    echo -e "${RED}âŒ Possible secrets detected in staged files!${NC}"
    echo -e "${YELLOW}Please review and remove any hardcoded secrets${NC}"
    exit 1
else
    echo -e "${GREEN}âœ… No secrets detected${NC}"
fi

echo -e "\n${GREEN}âœ¨ All pre-push checks passed!${NC}"
echo -e "${GREEN}ğŸš€ Pushing to remote...${NC}\n"

exit 0
